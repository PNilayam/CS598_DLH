    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "LSTM Length of Stay",
            "type": "python",
            "request": "launch",
            "module": "mimic3models.length_of_stay.main",
            "args": [
                "--network", "mimic3models/keras_models/lstm.py",
                "--dim", "64",
                "--timestep", "1.0",
                "--depth", "1",
                "--dropout", "0.3",
                "--mode", "train",
                "--batch_size", "256",
                "--partition", "custom",
                "--verbose", "1",
                "--save_every", "1000",
                "--epochs", "1",
                "--train_batches", "200",
                "--val_batches", "50",
                "--workers", "3",
                "--data", "/mnt/data01/mimic-3/benchmark/length-of-stay",
                "--output_dir", "/mnt/data01/mimic-3/benchmark/length-of-stay/lstm",
                //"&>", "lstm44.log"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Length of Stay Script",
            "type": "python",
            "request": "launch",
            "module": "mimic3benchmark.scripts.create_length_of_stay",
            "args": [
                "alldata/data22apr_small/root",
                "alldata/data22apr_small/length-of-stay/",
                //"&>", "lstm44.log"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Extract subjects",
            "type": "python",
            "request": "launch",
            "module": "mimic3benchmark.scripts.extract_subjects",
            "args": [
                "--test"
                "/mnt/data01/mimic-3/csv",
                "/mnt/data01/mimic-3/benchmark-small",
                //"&>", "lstm44.log"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Validate events",
            "type": "python",
            "request": "launch",
            "module": "mimic3benchmark.scripts.validate_events",
            "args": [
                "/mnt/data01/mimic-3/benchmark-small",
                //"&>", "lstm44.log"
            ],
            "console": "integratedTerminal"
        },
    ]
}